<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.altaf.diary.SnoozeTime">
    <TextView
        android:id="@+id/snooze_title"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_alignParentTop="true"
        android:text="Select Snooze Time"
        android:background="?colorMaterial"
        android:textColor="#FFFFFF"
        android:textSize="20sp"
        android:gravity="center_vertical|center_horizontal" />

    <ScrollView
        android:layout_below="@id/snooze_title"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/snooze_button">
    <RadioGroup
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <RadioButton
            android:id="@+id/snooze_time1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="15dp"
            android:layout_marginTop="3dp"
            android:layout_marginBottom="3dp"
            android:textSize="18sp"
            android:text="05 Min"
            />
        <RadioButton
            android:id="@+id/snooze_time2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="15dp"
            android:layout_marginTop="3dp"
            android:layout_marginBottom="3dp"
            android:textSize="18sp"
            android:text="10 Min"/>
        <RadioButton
            android:id="@+id/snooze_time3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="15dp"
            android:layout_marginTop="3dp"
            android:layout_marginBottom="3dp"
            android:textSize="18sp"
            android:text="15 Min"/>
        <RadioButton
            android:id="@+id/snooze_time4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="15dp"
            android:layout_marginTop="3dp"
            android:layout_marginBottom="3dp"
            android:textSize="18sp"
            android:text="30 Min"/>
        <RadioButton
            android:id="@+id/snooze_time5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="15dp"
            android:layout_marginTop="3dp"
            android:layout_marginBottom="3dp"
            android:textSize="18sp"
            android:text="45 Min"/>
        <RadioButton
            android:id="@+id/snooze_time6"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="15dp"
            android:layout_marginTop="3dp"
            android:layout_marginBottom="3dp"
            android:textSize="18sp"
            android:text="1 Hour"/>

    </RadioGroup>
    </ScrollView>

    <Button
        android:id="@+id/snooze_button"
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?colorMaterial"
        android:textColor="#FFFFFF"
        android:text="SET"/>

</RelativeLayout>
