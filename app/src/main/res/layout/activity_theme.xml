<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.altaf.diary.Theme">


    <TextView
        android:id="@+id/theme_title"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_alignParentTop="true"
        android:text="Select Theme"
        android:background="?colorMaterial"
        android:textColor="#FFFFFF"
        android:textSize="20sp"
        android:gravity="center_vertical|center_horizontal" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/theme_title"
        android:layout_above="@+id/theme_button"
        >
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:background="@color/colorAccent"
            android:layout_marginTop="10dp">

            <RadioButton
            android:id="@+id/theme_default"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:background="@color/colorMaterial"
            android:textColor="#FFFFFF"
            android:text="Default Theme"
            android:textSize="20sp"
            android:layout_marginBottom="5dp" />
        </LinearLayout>
        <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:background="@color/colorAccent2">

        <RadioButton
            android:id="@+id/theme_1"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:background="@color/colorMaterial2"
            android:textColor="#FFFFFF"
            android:text="Blue"
            android:textSize="20sp"
            android:layout_marginBottom="5dp" />
    </LinearLayout>
        <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:background="@color/colorAccent3">

        <RadioButton
            android:id="@+id/theme_2"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:background="@color/colorMaterial3"
            android:textColor="#FFFFFF"
            android:text="Wooden"
            android:textSize="20sp"
            android:layout_marginBottom="5dp" />
    </LinearLayout>
        <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:background="@color/colorAccent4">

        <RadioButton
            android:id="@+id/theme_3"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:background="@color/colorMaterial4"
            android:textColor="#FFFFFF"
            android:text="Black"
            android:textSize="20sp"
            android:layout_marginBottom="5dp" />
    </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:background="@color/colorAccent5">

            <RadioButton
                android:id="@+id/theme_4"
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:background="@color/colorMaterial5"
                android:textColor="#FFFFFF"
                android:text="Red"
                android:textSize="20sp"
                android:layout_marginBottom="5dp" />
        </LinearLayout>
    </LinearLayout>
    </ScrollView>

    <Button
        android:id="@+id/theme_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="SET"
        android:background="?colorMaterial"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textColor="#ffffff"
        android:textStyle="bold" />



</RelativeLayout>
